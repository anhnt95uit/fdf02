<% if !@order_detail.nil? && @order_detail.errors.any? %>
  <ul>
    <% @order_detail.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<% if @order_details.count > 0 %>
  <% @order_details.each do |item| %>
    <div class="well">
      <div class="row">
        <div class="col-sm-8">
          <h3><%= item.product.title %></h3>
        </div>
        <div class="col-sm-4">
          <div class="pull-right">
          <%= form_for(item, remote: true) do |f| %>
            <%= f.hidden_field :product_id, value: item.product.id %>
            <h5><%= item.product.price %></h5>
            <div class="form-group">
              <%= f.text_field :quantity, value: item.quantity.to_i, min: 1, class: "form-control" %>
            </div>
            <div class="btn-group">
              <%= f.submit "Update Quantity", class: "btn btn-primary" %>
              <%= link_to "Delete", item, method: :delete, remote: true, class: "btn btn-danger"  %>
            </div>
            <span>Total Price: <%= item.total_price %></span>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
<% end %>
